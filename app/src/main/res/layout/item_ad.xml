<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButtonAd"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/parking"
            android:contentDescription="RecipeImage"/>

        <TextView
            android:id="@+id/textViewAdTitle"
            style="@style/DetailTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Titre de la l'annonce" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/itemStar"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_star_green" />

            <TextView
                android:id="@+id/textViewRating"
                style="@style/DetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4,6" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textViewDistance"
                style="@style/DetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60m" />

            <TextView
                android:id="@+id/textViewPrice"
                style="@style/DefaultGreenTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="7,00 â‚¬" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>